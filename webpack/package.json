{
  "name": "cryptowallet",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf ../www/assets/dist/",
    "watch": "yarn clean && webpack --mode development --watch",
    "build": "yarn clean && webpack --mode development",
    "buildp": "yarn clean && webpack --mode production",
    "webpack": "rm -f package-lock.json && yarn upgrade && yarn build",
    "cordova": "cd .. && rm package.json && rm -rf platforms plugins && cordova prepare && cordova build browser",
    "postinstall": "yarn webpack && yarn cordova",
    "release": "yarn run version && yarn install && cd .. && ./answer_script.sh | ./release-app.sh",
    "version": "version=$(git branch | grep .*release\\/ | sed 's/* release\\///g') && cd .. && yarn version --new-version $version  && ./update-version.sh",
    "ios": "find ./../platforms/ios/ -name '*.png' -exec convert '{}' -alpha off '{}' \\;"
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "browser": "^0.2.6",
    "datatables.net": "^1.10.19",
    "datatables.net-responsive": "^2.2.3",
    "jquery": "^3.3.1",
    "mustache": "^3.0.1",
    "numeral": "^2.0.6",
    "platform": "^1.3.5",
    "popper.js": "^1.14.5",
    "slideout": "^1.0.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.5.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.0",
    "expose-loader": "^0.7.5",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "node-sass": "^4.10.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.1",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  }
}
